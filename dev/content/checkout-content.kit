<section id="content">
    <h1>Check Out</h1>
    <section>
        <section id="cart">
            <div>
                <h2>Cart</h2>
                <i class="fa-solid fa-cart-shopping" style="color: #000000;"></i>
            </div>

            <div>
                <img src="" alt="">
                <p>Tenon Saw</p>
                <p><span>with cherry wood handle </span></p>
                <p>$275</p>
            </div>
            <hr width="100%" color="black">
            <div>
                <p><span>Total</span></p>
                <p>$275</p>
            </div>
        </section>

        <section id="billing">

            <h2>Billing Address</h2>
            <div>
                <i class="fa-solid fa-user" style="color: #000000;"></i>
                <p>Full Name</p>
                <form action="#">
                    <input type="text" placeholder="John M. Doe">

                    <i class="fa-solid fa-envelope" style="color: #000000;"></i>
                    <p>Email</p>
                    <form action="#">
                        <input type="text" placeholder="john@example.com">

                        <i class="fa-solid fa-address-card" style="color: #000000;"></i>
                        <p>Address</p>
                        <form action="#">
                            <input type="text" placeholder="542 W. 15th Street">

                            <i class="fa-solid fa-city" style="color: #000000;"></i>
                            <p>City</p>
                            <form action="#">
                                <input type="text" placeholder="New York">

                                <p>State</p>
                                <form action="#">
                                    <input type="text" placeholder="NY">

                                    <p>Zip</p>
                                    <form action="#">
                                        <input type="text" placeholder="10001">
            </div>
        </section>

        <section id="payment">
            <h1>Payment</h1>

            <div>
                <p>Other Forms of Payment</p>
                <button>
                    <i class="fa-brands fa-apple-pay" style="color: #000000;"></i>
                </button>

                <button>
                    <i class="fa-brands fa-paypal" style="color: #000000;"></i>
                </button>

                <hr width="100%" color="black">

                <p>Name on Card</p>
                <form action="#">
                    <input type="text" placeholder="John More Doe">

                    <p>Credit Card Number</p>
                            <form action="#">
                                <input type="number" placeholder="1111-2222-3333-4444">

                    <p>Exp Month</p>
                        <form action="#">
                            <input type="text" placeholder="Septmeber">

                    <p>Exp Year</p>
                        <form action="#">
                            <input type="number" placeholder="2023">

                    <p>CVV</p>
                        <form action="#">
                            <input type="number" placeholder="001">

                    <form action="#">
                        <input type="checkbox">
                    <p>Shipping address same as billing</p>

                        <button>Purchase</button>
            </div>
        </section>
